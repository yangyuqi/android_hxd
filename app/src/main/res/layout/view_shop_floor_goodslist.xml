<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:padding="@dimen/distance">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_black_17"
        android:text="@string/label_hot_choose"/>
    <com.zhejiang.haoxiadan.ui.view.NoScrollGridView
        android:id="@+id/gv_goods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="@dimen/item_distance_5"
        android:horizontalSpacing="@dimen/item_distance_5"
        android:numColumns="2"/>
</LinearLayout>