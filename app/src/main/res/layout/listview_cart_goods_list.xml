<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/iv_choose_goods"
            android:layout_width="@dimen/cart_item_checkbox_width"
            android:layout_height="@dimen/cart_item_checkbox_width"
            android:layout_marginLeft="@dimen/distance"
            android:button="@null"
            android:background="@drawable/btn_shoppingcart"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/rl_goods_icon"
            android:layout_width="@dimen/cart_item_img_height"
            android:layout_height="@dimen/cart_item_img_height"
            android:layout_toRightOf="@id/iv_choose_goods"
            android:layout_margin="@dimen/distance"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_goods_icon"
                android:layout_width="@dimen/cart_item_img_height"
                android:layout_height="@dimen/cart_item_img_height"
                android:scaleType="centerCrop"
                android:src="@color/default_image_color"/>
            <ImageView
                android:id="@+id/iv_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_goods_icon"
                android:layout_alignRight="@id/iv_goods_icon"
                android:src="@mipmap/icon_goods"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_goods_icon"
            android:layout_marginTop="@dimen/distance"
            android:layout_marginBottom="@dimen/distance"
            android:layout_marginRight="@dimen/distance"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_black_14"
                android:maxLines="2"
                android:ellipsize="end"
                android:text=""/>
            <TextView
                android:id="@+id/tv_level_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_black_12"
                android:text=""/>
            <TextView
                android:id="@+id/tv_level_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_black_12"
                android:text=""/>
            <TextView
                android:id="@+id/tv_level_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_black_12"
                android:text=""/>
        </LinearLayout>
        <com.zhejiang.haoxiadan.ui.view.CountDownTextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_goods_icon"
            android:layout_alignLeft="@id/rl_goods_icon"
            android:layout_marginTop="@dimen/distance"
            style="@style/text_red_14"
            android:text=""/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_goods_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white">

    </LinearLayout>
</LinearLayout>
