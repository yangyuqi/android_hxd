<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="-8dp"
        android:background="@drawable/pg_order"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="170dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_marginLeft="30dp"
            android:layout_gravity="start"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/btn_message"
            android:layout_marginTop="30dp"
            android:id="@+id/alarm_pop_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/text_black_light"
            android:textSize="16sp" />
        <TextView
            android:drawablePadding="20dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@mipmap/btn_home_order"
            android:id="@+id/alarm_pop"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/text_black_light"
            android:textSize="16sp" />
        <TextView

            android:visibility="gone"
            android:layout_marginTop="@dimen/item_distance_5"
            android:drawablePadding="20dp"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@mipmap/btn_shopping22"
            android:id="@+id/alarm_child"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@null"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@color/text_black_light"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>