<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_gray">
    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white" >
        <ImageView
            android:id="@+id/iv_shop_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_top_total_height"
            android:scaleType="centerCrop"
            android:src="@mipmap/pg_shop"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/shop_top_total_height"
            android:scaleType="centerCrop"
            android:src="#0f000000"/>
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:layout_marginRight="@dimen/distance">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/distance"
                android:scaleType="center"
                android:src="@drawable/btn_back_white"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:id="@+id/rl_search"
                android:layout_width="@dimen/shop_top_search_width"
                android:layout_height="@dimen/shop_top_search_height"
                android:layout_toLeftOf="@id/tv_search"
                android:paddingRight="@dimen/distance"
                android:paddingLeft="@dimen/distance"
                android:background="@color/bg_gray"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_delete"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:id="@+id/et_keyword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_delete"
                    android:drawableLeft="@mipmap/icon_search"
                    android:gravity="center_vertical"
                    android:background="@color/transparent"
                    android:text="@string/label_goods"
                    style="@style/text_gray_14"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/rl_title"
            android:layout_height="@dimen/shop_top_height"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginBottom="@dimen/distance"
            android:layout_marginRight="@dimen/distance">
            <ImageView
                android:id="@+id/iv_shop_icon"
                android:layout_width="@dimen/shop_icon_height"
                android:layout_height="@dimen/shop_icon_height"
                android:layout_marginLeft="@dimen/distance"
                android:layout_centerVertical="true"
                android:src="@color/default_image_color"/>
            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_shop_icon"
                android:layout_marginLeft="@dimen/distance"
                android:layout_centerVertical="true"
                style="@style/text_white_17"
                android:text=""/>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_collect_big"/>
                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_white_14"
                    android:text="@string/label_collect"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_bottom_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/bg_white">
        <LinearLayout
            android:id="@+id/ll_seller_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_archives"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                style="@style/text_gray_17"
                android:text="@string/btn_seller_file"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/divider_1"
            android:layout_height="match_parent"
            android:background="@color/line_gray_cc"/>
        <LinearLayout
            android:id="@+id/ll_online_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_consulting_big"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                style="@style/text_gray_17"
                android:text="@string/btn_online_service"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_shop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_tab_height"
        android:layout_below="@id/ll_top"
        android:layout_marginTop="@dimen/top_distance"
        android:background="@color/bg_white"
        app:tabIndicatorColor="@color/text_red"
        app:tabIndicatorHeight="@dimen/order_tab_line"
        app:tabSelectedTextColor="@color/text_red"
        app:tabTextColor="@color/text_gray"
        app:tabTextAppearance="@style/text_gray_14"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <com.zhejiang.haoxiadan.ui.view.NoScrollViewPager
        android:id="@+id/vp_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_shop"
        android:layout_above="@id/ll_bottom"
        android:layout_marginTop="@dimen/top_distance"
        android:background="@color/bg_white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"
        android:layout_above="@id/ll_bottom"/>


</RelativeLayout>
