<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <com.zhejiang.haoxiadan.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_cashier"/>
    <TextView
        android:id="@+id/tv_enter_code_tip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_add_apply_item_height"
        style="@style/text_black_14"
        android:gravity="center"
        android:text=""/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance"
        android:background="@color/bg_white">
        <TextView
            android:id="@+id/tv_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_black_14"
            android:text="验证码"/>
        <Button
            android:id="@+id/btn_send_code_message"
            android:text="获取验证码"
            android:textColor="@color/main_red"
            android:textSize="@dimen/font_13"
            android:layout_gravity="center_vertical"
            android:background="@drawable/send_code_bg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>
        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/distance"
            android:layout_toRightOf="@id/tv_code_label"
            android:layout_toLeftOf="@id/btn_send_code_message"
            android:background="@color/transparent"
            android:hint="短信验证码"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_verify_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/value_add_apply_btn_margin_left"
        android:layout_marginRight="@dimen/value_add_apply_btn_margin_left"
        android:layout_marginTop="@dimen/value_add_apply_btn_margin_top"
        android:background="@drawable/bg_solid_red_corner"
        android:gravity="center"
        style="@style/text_white_17"
        android:text="@string/btn_verify_info"/>
</LinearLayout>
