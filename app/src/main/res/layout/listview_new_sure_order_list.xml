<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <TextView
        android:id="@+id/tv_order_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sure_order_order_head_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/distance"
        style="@style/text_red_14"
        android:text=""/>

    <com.zhejiang.haoxiadan.ui.view.NoScrollListView
        android:id="@+id/lv_new_goods_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:divider="@color/line_gray_cc"
        android:dividerHeight="@dimen/divider_1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_14"
            android:text="@string/label_count_ship"/>
        <TextView
            android:id="@+id/tv_total_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/text_red_14"
            android:text=""/>
        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sure_order_list_item_message_height"
            android:layout_below="@id/tv_total_ship"
            android:layout_marginTop="@dimen/distance"
            android:background="@drawable/bg_stroke_gray_solid_white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/distance"
            android:hint="@string/hint_leave_message"
            android:textColorHint="@color/text_gray"
            style="@style/text_black_14"/>
    </RelativeLayout>

</LinearLayout>