<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:background="@drawable/bg_round_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_margin="@dimen/divider_2"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="250dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_icon"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="165dp" />

        <TextView
            android:paddingLeft="@dimen/distance"
            android:layout_below="@+id/iv_icon"
            android:textSize="@dimen/font_13"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/text_black_light"
            android:text="描述"
            />

        <RelativeLayout
            android:paddingLeft="@dimen/distance"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price"
                android:textSize="@dimen/font_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_red"
                android:text="￥7324"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_marginRight="@dimen/item_distance_5"
                android:id="@+id/tv_num"
                android:textSize="@dimen/font_13"
                android:textColor="@color/text_black_light"
                android:text="月销量1000件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="1dp"
        android:id="@+id/rl_bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_marginLeft="@dimen/distance"
            android:id="@+id/tv_go_cart"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_goodsxxhdpi"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_find_same"
            android:drawablePadding="@dimen/distance"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/distance"
            android:text="找相似 >"
            />


    </RelativeLayout>


</LinearLayout>