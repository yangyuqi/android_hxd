<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <com.zhejiang.haoxiadan.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_value_add"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_distance"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:padding="@dimen/distance"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_user_icon"
            android:layout_width="@dimen/value_add_icon_height"
            android:layout_height="@dimen/value_add_icon_height"
            android:scaleType="centerCrop"
            android:src="@color/default_image_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/distance">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_black_17"
                android:text=""/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_gray_14"
                    android:text="@string/label_user_type_"/>
                <TextView
                    android:id="@+id/tv_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_gray_14"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_validity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_gray_14"
                    android:text="@string/label_validity_time_"/>
                <TextView
                    android:id="@+id/tv_validity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_red_14"
                    android:text=""/>
            </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_purcher"
                android:paddingRight="@dimen/item_distance_5"
                android:paddingLeft="@dimen/item_distance_5"
                android:layout_margin="@dimen/item_distance_5"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_add_apply_btn_height"
                android:background="@color/main_red"
                style="@style/text_white_14"
                android:text="升级供应商"
                android:gravity="center"/>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="@dimen/distance"
        style="@style/text_gray_14"
        android:text="@string/label_value_add"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <LinearLayout
        android:id="@+id/ll_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/bg_white"
        android:padding="@dimen/distance"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll_apply_purchaser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_stroke_gray_solid_gray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_add_apply_height"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_black_20"
                    android:text="@string/label_purchaser"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_gray_12"
                    android:text="@string/label_purchaser_en"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_add_apply_btn_height"
                android:background="@color/main_red"
                style="@style/text_white_17"
                android:text="@string/label_immediately_settled"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_apply_supplier"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:orientation="vertical"
            android:background="@drawable/bg_stroke_gray_solid_gray">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_add_apply_height"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_black_20"
                    android:text="@string/label_supplier"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_gray_12"
                    android:text="@string/label_supplier_en"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_add_apply_btn_height"
                android:background="@color/main_red"
                style="@style/text_white_17"
                android:text="@string/label_immediately_settled"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_no_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance">
            <TextView
                android:id="@+id/tv_apply_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_gray_14"
                android:text="@string/label_apply_type_"/>
            <TextView
                android:id="@+id/tv_apply_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_apply_type_label"
                style="@style/text_black_14"
                android:text=""/>
            <TextView
                android:id="@+id/tv_apply_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_apply_type_label"
                android:layout_alignRight="@id/tv_apply_type_label"
                style="@style/text_gray_14"
                android:text="@string/label_order_status_"/>
            <TextView
                android:id="@+id/tv_apply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_apply_status_label"
                android:layout_alignBottom="@id/tv_apply_status_label"
                style="@style/text_red_14"
                android:text="@string/label_no_pay"/>
            <TextView
                android:layout_alignRight="@id/tv_apply_status_label"
                android:visibility="gone"
                android:id="@+id/tv_apply_modify_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_apply_status_label"
                style="@style/text_gray_14"
                android:text="@string/label_apply_modify_"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_apply_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_apply_modify_label"
                android:layout_alignBottom="@id/tv_apply_modify_label"
                style="@style/text_red_14"
                android:text="@string/btn_modify"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/line_gray_cc"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="@dimen/value_add_apply_btn_margin_left"
            android:layout_marginRight="@dimen/value_add_apply_btn_margin_left"
            android:layout_marginTop="@dimen/value_add_apply_btn_margin_top"
            android:background="@drawable/bg_solid_red_corner"
            android:gravity="center"
            style="@style/text_white_17"
            android:text="@string/btn_go_pay"/>

    </LinearLayout>
</LinearLayout>
