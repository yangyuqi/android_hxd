<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_title"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_white"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="161dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo"
            />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        >

        <TextView
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/font_15"
            android:text="短信验证码已发送到 :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/divider_2"
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/font_15"
            android:id="@+id/tv_phone"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="138******245"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/distance"
        android:orientation="horizontal"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/login_rl_bg"
        android:layout_width="145dp"
        android:layout_height="match_parent">

        <EditText
            android:cursorVisible="true"
            android:id="@+id/edt_input_code"
            android:inputType="number"
            android:textSize="@dimen/font_15"
            android:textColorHint="@color/text_gray"
            android:gravity="center_horizontal"
            android:hint="请输入短信验证码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

     <Button
         android:id="@+id/btn_send_code_message"
         android:text="获取验证码"
         android:textColor="@color/main_red"
         android:textSize="@dimen/font_13"
         android:layout_gravity="center_vertical"
         android:background="@drawable/send_code_bg"
         android:layout_weight="1"
         android:layout_marginLeft="@dimen/distance"
         android:layout_width="0dp"
         android:layout_height="match_parent" />

</LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/distance"
        android:background="@drawable/login_rl_bg"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <EditText
            android:layout_marginLeft="20dp"
            android:cursorVisible="true"
            android:id="@+id/edt_input_pwd"
            android:inputType="textPassword"
            android:textSize="@dimen/font_14"
            android:textColorHint="@color/text_gray"
            android:paddingLeft="@dimen/distance"
            android:hint="6-16字母数字字符组合密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:button="@null"
            android:id="@+id/iv_show_pwd"
            android:paddingLeft="@dimen/distance"
            android:background="@drawable/btn_eye"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/tv_post"
        android:textSize="@dimen/font_15"
        android:textColor="@color/text_white"
        android:gravity="center"
        android:text="提交"
        android:background="@drawable/ripper_register_bg"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <LinearLayout
        android:id="@+id/ll_show_xieyi"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        >

        <TextView
            android:textColor="@color/text_black_light"
            android:textSize="@dimen/font_13"
            android:text="用户注册代表同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/font_13"
            android:id="@+id/tv_xie_yi"
            android:paddingLeft="5dp"
            android:textColor="@color/text_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户注册协议》"
            />

    </LinearLayout>
</LinearLayout>
</LinearLayout>