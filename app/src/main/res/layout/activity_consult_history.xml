<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <com.zhejiang.haoxiadan.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_consult_history" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/refund_detail_refund_head_height"
        android:layout_marginTop="@dimen/top_distance"
        android:paddingLeft="@dimen/distance"
        android:gravity="center_vertical"
        style="@style/text_black_17"
        android:text="@string/label_refund_info"
        android:background="@color/bg_white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <ListView
        android:id="@+id/lv_consult_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_gray_light"
        android:dividerHeight="@dimen/list_divider_4"/>

</LinearLayout>
