<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:visibility="gone"
            android:id="@+id/hot_fragment_ls_item_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/bg_gray"
            android:gravity="center"
            android:text="2017/9/2"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/font_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/bg_white"
            android:paddingBottom="@dimen/distance"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/iv_hot"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_hot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_hot"
                android:layout_marginTop="@dimen/item_distance_5"
                android:singleLine="true"
                android:text="热烈祝贺热烈祝贺热烈祝贺热烈祝贺热烈祝贺"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_17" />

            <TextView
                android:lines="2"
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_hot_title"
                android:layout_marginTop="5dp"
                android:text="新的开始新的开始新的开始新的"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_13" />

            <RelativeLayout
                android:layout_below="@+id/tv_sub_title"
                android:layout_alignParentBottom="true"
                android:id="@+id/rl_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/goods_details_layout_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:button="@null"
                    android:drawableLeft="@drawable/checkbox_give_up_bg"
                    android:paddingLeft="25dp"
                    android:text="   "
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/font_13" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="50"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/font_14" />

            </LinearLayout>

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_date"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_15"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>