<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true"
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_address_grey"
        />
    <TextView
        android:layout_marginLeft="@dimen/distance"
        android:layout_centerVertical="true"
        android:text="速度快的方式"
        android:textColor="@color/text_gray"
        android:layout_toRightOf="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_area"
        />

        <ImageView
            android:id="@+id/iv_icon"
            android:paddingBottom="@dimen/distance"
            android:paddingTop="@dimen/distance"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_correct"
            />

</RelativeLayout>
</RelativeLayout>