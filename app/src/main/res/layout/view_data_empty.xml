<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@color/bg_gray"
      android:gravity="center">
    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pg_icon"/>
    <TextView
        android:id="@+id/txt_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_gray_17"
        android:paddingTop="@dimen/distance"
        android:paddingBottom="@dimen/distance"
        android:text="@string/network_err2"
        />
    <Button
        android:id="@+id/btn_network_refresh"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:text="@string/network_refresh"
        style="@style/text_red_14"
        android:background="@drawable/bg_stroke_red_solid_white_conner"
        android:visibility="gone" />

</LinearLayout>
