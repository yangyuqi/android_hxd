<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/view_title"/>

    <android.support.design.widget.TabLayout
        android:background="@color/bg_white"
        android:layout_marginTop="@dimen/item_distance_5"
        android:id="@+id/goods_details_tl"
        app:tabGravity="center"
        app:tabMode="scrollable"
        app:tabIndicatorColor="@color/main_red"
        app:tabSelectedTextColor="@color/main_red"
        app:tabTextColor="@color/text_black"
        android:layout_toLeftOf="@+id/ib_carts"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="40dp">

    </android.support.design.widget.TabLayout>


    <com.liaoinstan.springview.widget.SpringView
        android:layout_marginTop="@dimen/item_distance_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv"
        app:type="follow"
        app:header="@layout/default_header"
        app:footer="@layout/default_footer"
        >

    <ListView
        android:dividerHeight="8dp"
        android:divider="@color/bg_gray"
        android:layout_marginTop="@dimen/item_distance_5"
        android:id="@+id/fragment_hot_ls"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>
