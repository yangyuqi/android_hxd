<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <com.zhejiang.haoxiadan.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_cashier" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:layout_marginTop="@dimen/top_distance"
                android:paddingTop="@dimen/pay_success_top_margin"
                android:paddingBottom="@dimen/pay_success_top_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_pay_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_red_24"
                    android:text="@string/label_pay_success"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pay_success_top_margin">
                    <ImageView
                        android:id="@+id/iv_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_success"
                        android:layout_marginRight="@dimen/distance"/>

                    <RelativeLayout
                        android:id="@+id/rl_loan_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_success"
                        android:layout_alignTop="@+id/iv_success"
                        android:layout_alignBottom="@+id/iv_success"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tv_loan_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            style="@style/text_gray_17"
                            android:text="@string/label_pay_price_"/>
                        <TextView
                            android:id="@+id/tv_loan_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_loan_price_label"
                            android:layout_centerVertical="true"
                            style="@style/text_black_light_17"
                            android:text=""/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_pay_way_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_success"
                        android:layout_alignTop="@+id/iv_success"
                        android:layout_alignBottom="@+id/iv_success">
                        <TextView
                            android:id="@+id/tv_pay_way_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/text_gray_17"
                            android:text="@string/label_pay_way_"/>
                        <TextView
                            android:id="@+id/tv_pay_way"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_pay_way_label"
                            style="@style/text_black_light_17"
                            android:text=""/>

                        <TextView
                            android:id="@+id/tv_price_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            style="@style/text_gray_17"
                            android:text="@string/label_pay_price_"/>
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_price_label"
                            android:layout_alignParentBottom="true"
                            style="@style/text_black_light_17"
                            android:text=""/>
                    </RelativeLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pay_success_top_margin"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_review_order"
                        android:layout_width="@dimen/pay_success_top_btn_width"
                        android:layout_height="@dimen/pay_success_top_btn_height"
                        android:background="@drawable/bg_stroke_gray_solid_white"
                        style="@style/text_black_light_17"
                        android:gravity="center"
                        android:text="@string/btn_review_order"/>
                    <TextView
                        android:id="@+id/tv_back_home"
                        android:layout_width="@dimen/pay_success_top_btn_width"
                        android:layout_height="@dimen/pay_success_top_btn_height"
                        android:background="@drawable/bg_stroke_gray_solid_white"
                        android:layout_marginLeft="@dimen/pay_success_top_btn_margin_left"
                        style="@style/text_black_light_17"
                        android:gravity="center"
                        android:text="@string/btn_back_home"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_success_goods_head_height"
                android:layout_marginTop="@dimen/top_distance"
                android:background="@color/bg_white"
                android:orientation="horizontal"
                android:gravity="center">
                <View
                    android:layout_width="@dimen/pay_success_goods_head_line_width"
                    android:layout_height="@dimen/divider_1"
                    android:background="@color/line_gray_cc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance"
                    style="@style/text_black_light_17"
                    android:text="@string/label_goods_recomend"/>
                <View
                    android:layout_width="@dimen/pay_success_goods_head_line_width"
                    android:layout_height="@dimen/divider_1"
                    android:background="@color/line_gray_cc"/>

            </LinearLayout>
            <com.zhejiang.haoxiadan.ui.view.NoScrollGridView
                android:id="@+id/gv_goods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:verticalSpacing="@dimen/item_distance_5"
                android:horizontalSpacing="@dimen/item_distance_5"
                android:numColumns="2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
