<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">
        <!-- 左操作 -->
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:paddingLeft="@dimen/distance"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:clickable="true"
                android:id="@+id/iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back"/>
        </LinearLayout>
        <!-- 标题 -->
        <TextView
            android:textSize="@dimen/font_15"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="@string/title_evaluate"
            android:maxEms="10"
            android:lines="1"
            android:ellipsize="end"/>
        <!-- 右操作文本 -->
        <TextView
            android:textSize="@dimen/font_14"
            android:textColor="@color/text_red"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/distance"
            android:gravity="center"
            android:text="@string/btn_release"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:layout_marginTop="@dimen/top_distance"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/distance"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_goods_icon"
                android:layout_width="@dimen/evaluate_img_height"
                android:layout_height="@dimen/evaluate_img_height"
                android:scaleType="centerCrop"
                android:src="@color/default_image_color"/>
            <RatingBar
                android:id="@+id/rb_order_stars"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/evaluate_rating_bar_height"
                android:progressDrawable="@drawable/rating_bar"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginLeft="@dimen/distance"
                android:rating="5"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_evaluate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/evaluate_edit_height"
            android:background="@color/transparent"
            android:layout_margin="@dimen/distance"
            style="@style/text_black_14"
            android:textColorHint="@color/text_gray"
            android:hint="@string/hint_evaluate"/>

        <GridView
            android:id="@+id/gv_imgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/distance"
            android:verticalSpacing="@dimen/item_distance_5"
            android:horizontalSpacing="@dimen/item_distance_5"
            android:numColumns="4"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/line_gray_cc"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/evaluate_anonymous_height">
            <CheckBox
                android:id="@+id/cb_anonymous"
                android:layout_width="@dimen/evaluate_checkbox_height"
                android:layout_height="@dimen/evaluate_checkbox_height"
                android:layout_marginLeft="@dimen/distance"
                android:button="@null"
                android:background="@drawable/btn_assess"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_anonymous"
                android:layout_marginLeft="@dimen/distance"
                android:layout_centerVertical="true"
                style="@style/text_black_light_14"
                android:text="@string/label_anonymous"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/distance"
                android:layout_centerVertical="true"
                style="@style/text_gray_14"
                android:text="@string/label_anonymous_tip"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:layout_marginTop="@dimen/top_distance">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/distance"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_merchant"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                style="@style/text_black_17"
                android:text="@string/label_shop_evaluate"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/distance"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_black_14"
                android:text="@string/label_logistics_evaluate"/>
            <RatingBar
                android:id="@+id/rb_logistics_stars"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/evaluate_rating_bar_height"
                android:progressDrawable="@drawable/rating_bar"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginLeft="@dimen/distance"
                android:rating="5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/distance"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_black_14"
                android:text="@string/label_service_evaluate"/>
            <RatingBar
                android:id="@+id/rb_service_stars"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/evaluate_rating_bar_height"
                android:progressDrawable="@drawable/rating_bar"
                android:numStars="5"
                android:stepSize="1"
                android:layout_marginLeft="@dimen/distance"
                android:rating="5"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
