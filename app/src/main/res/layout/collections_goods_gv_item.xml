<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/distance"
    android:layout_marginRight="@dimen/distance"
    android:background="@drawable/bg_round_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="@dimen/item_distance_5"
        android:id="@+id/ll_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_margin="@dimen/divider_2"
        android:id="@+id/rl_rltop"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:padding="5dp"
            android:paddingLeft="@dimen/distance"
            android:text="描述"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/distance">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥7324"
                android:textColor="@color/main_red"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/distance"
                android:text="月销量1000件"
                android:textColor="@color/text_black_light"
                android:textSize="11sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_marginLeft="@dimen/distance"
            android:id="@+id/tv_go_cart"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_goods2"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_find_same"
            android:drawablePadding="@dimen/distance"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/distance"
            android:text="找相似 >"

            />


    </RelativeLayout>
</LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_icon_store"
        android:layout_width="match_parent"
        android:layout_height="280dp" />


</RelativeLayout>