<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">
    <com.zhejiang.haoxiadan.ui.view.CommonTitle
        android:id="@+id/common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleStr="@string/title_logistics"
        app:rightIcon="@drawable/btn_more2"
        app:showRightIcon="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logistics_top_height"
        android:layout_marginTop="@dimen/top_distance"
        android:background="@color/bg_white"
        android:padding="@dimen/distance">
        <ImageView
            android:id="@+id/iv_company_icon"
            android:layout_width="@dimen/logistics_img_height"
            android:layout_height="@dimen/logistics_img_height"
            android:scaleType="centerCrop"
            android:src="@color/default_image_color"/>
        <TextView
            android:id="@+id/tv_company_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_company_icon"
            android:layout_marginLeft="@dimen/distance"
            style="@style/text_gray_14"
            android:text="@string/label_ship_company_"/>
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_company_label"
            style="@style/text_gray_14"
            android:text=""/>

        <TextView
            android:id="@+id/tv_logistics_no_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_company_label"
            android:layout_toRightOf="@id/iv_company_icon"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            style="@style/text_gray_14"
            android:text="@string/label_logistics_no_"/>
        <TextView
            android:id="@+id/tv_logistics_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_logistics_no_label"
            android:layout_alignBottom="@id/tv_logistics_no_label"
            style="@style/text_gray_14"
            android:text=""/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <RelativeLayout
        android:id="@+id/rl_ship_man"
        android:layout_width="match_parent"
        android:layout_height="@dimen/logistics_dispatch_height"
        android:background="@color/bg_white"
        android:padding="@dimen/distance"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_ship_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_logistics"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_ship_icon"
            android:layout_marginLeft="@dimen/distance"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_gray_14"
                android:text="@string/label_deliveryer"/>
            <TextView
                android:id="@+id/tv_ship_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_gray_17"
                android:text=""/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_call"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/logistics_list_head_height"
        android:layout_marginTop="@dimen/top_distance"
        android:orientation="horizontal"
        android:background="@color/bg_white"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            style="@style/text_black_14"
            android:text="@string/label_this_data"/>
        <TextView
            android:id="@+id/tv_info_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_green_14"
            android:text="***"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_14"
            android:text="@string/label_provide"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_1"
        android:background="@color/line_gray_cc"/>
    <ListView
        android:id="@+id/lv_logistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bg_white"
        android:dividerHeight="0dp"/>
</LinearLayout>
