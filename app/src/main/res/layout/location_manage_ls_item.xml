<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:paddingLeft="@dimen/distance"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:maxLength="8"
                    android:id="@+id/tv_name"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张华"
                    />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginLeft="60dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="131314142"
                    />

                <TextView
                    android:layout_marginLeft="60dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_address"
                android:layout_marginTop="@dimen/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京市南京市南京市南京市南京市"
                android:textSize="@dimen/font_15"
                android:textColor="@color/text_black_light"
                />

        </LinearLayout>

    </RelativeLayout>

     <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/divider_1"
         android:background="@color/line_gray_cc"/>
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="40dp">

          <LinearLayout
              android:layout_marginLeft="@dimen/distance"
              android:layout_marginTop="@dimen/distance"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <ImageView
                  android:gravity="center_vertical"
                  android:layout_marginRight="@dimen/distance"
                  android:src="@mipmap/btn_address_choose"
                  android:id="@+id/cart_rb_q"
                  android:layout_width="18dp"
                  android:layout_height="18dp"
                  android:layout_centerVertical="true"
                  android:button="@null" />

              <TextView
                  android:gravity="center_vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/text_black"
                  android:textSize="@dimen/font_15"
                  android:text="默认地址"/>

          </LinearLayout>

          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="@dimen/distance"
              >

              <TextView
                  android:id="@+id/tv_edit"
                  android:drawablePadding="@dimen/item_distance_5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="编辑"
                  android:textColor="@color/text_black"
                  android:textSize="@dimen/font_15"
                  android:drawableLeft="@mipmap/btn_address_edit"
                  />

              <TextView
                  android:id="@+id/tv_delete"
                  android:layout_marginLeft="15dp"
                  android:drawablePadding="@dimen/item_distance_5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="删除"
                  android:textColor="@color/text_black"
                  android:textSize="@dimen/font_15"
                  android:drawableLeft="@mipmap/btn_address_delete"
                  />

          </LinearLayout>

      </RelativeLayout>

</LinearLayout>
</LinearLayout>