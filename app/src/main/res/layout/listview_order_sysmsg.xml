<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/txt_sysmsg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/text_gray_12"
        android:padding="@dimen/list_divider_4"
        android:text="17-07-09"/>

    <LinearLayout
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/list_divider_4"
        android:layout_marginRight="@dimen/list_divider_4"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_divider_4"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_sysmsg_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_black_14"
                android:text="@string/system_remind"/>

            <TextView
                android:id="@+id/txt_sysmsg_orderstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_red_14"
                android:text="@string/system_remind"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_divider_4">
            <ImageView
                android:id="@+id/img_sysmsg"
                android:src="@mipmap/icon_message"
                android:layout_width="47.33dp"
                android:layout_height="47.33dp" />
            <TextView
                android:id="@+id/txt_sysmsg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:paddingLeft="@dimen/list_divider_4"
                style="@style/text_black_14"
                android:layout_toRightOf="@id/img_sysmsg"
                android:text="name"/>
            <TextView
                android:id="@+id/txt_sysmsg_orderid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/text_gray_12"
                android:paddingLeft="@dimen/list_divider_4"
                android:layout_toRightOf="@id/img_sysmsg"
                android:layout_alignBottom="@id/img_sysmsg"
                android:text="name"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_1"
            android:background="@color/line_gray_cc"/>
        <RelativeLayout
            android:id="@+id/rl_go_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/list_divider_4">
            <ImageView
                android:id="@+id/img_sys_right"
                android:layout_marginRight="@dimen/distance"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"
                />
            <TextView
                android:layout_toLeftOf="@id/img_sys_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/view_left_right_padding"
                android:text="@string/system_see_details"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
