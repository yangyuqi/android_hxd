<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <TextView
            android:id="@+id/tv_name"
            android:padding="@dimen/item_distance_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            />

        <LinearLayout
            android:background="@drawable/shape_bg_eva"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/left_iv"
                android:background="@mipmap/ic_launcher"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="2"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/rl_right_up"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    
                    <ImageView
                        android:padding="@dimen/item_distance_5"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv_seven"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                         />

                    <LinearLayout
                        android:paddingLeft="@dimen/item_distance_5"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/iv_seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_up_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是的覅及"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:textSize="@dimen/font_14"
                            android:id="@+id/tv_up_two"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="柯冬生"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_2"
                    android:background="@color/line_gray_cc"
                    />

                <RelativeLayout
                    android:id="@+id/rl_right_down"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <ImageView
                        android:padding="@dimen/item_distance_5"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/iv2_seven"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        />

                    <LinearLayout
                        android:paddingLeft="@dimen/item_distance_5"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/iv2_seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_down_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是的覅及"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:textSize="@dimen/font_14"
                            android:id="@+id/tv_down_two"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="柯冬生"
                            />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        
    </RelativeLayout>


</LinearLayout>