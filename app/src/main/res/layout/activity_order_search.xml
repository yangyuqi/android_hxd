<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:padding="@dimen/distance">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/distance"
            android:scaleType="center"
            android:src="@drawable/btn_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_black_17"
            android:text="@string/btn_search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_edittext_height"
            android:layout_toLeftOf="@id/tv_search"
            android:layout_toRightOf="@id/iv_back"
            android:layout_marginRight="@dimen/distance"
            android:paddingRight="@dimen/distance"
            android:paddingLeft="@dimen/distance"
            android:background="@color/bg_gray"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/et_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/iv_delete"
                android:drawableLeft="@mipmap/icon_search"
                android:gravity="center_vertical"
                android:background="@color/transparent"
                android:hint="@string/btn_search"
                android:textColorHint="@color/text_gray"
                style="@style/text_gray_14"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_2"
        android:background="@color/line_gray_cc"/>
    <LinearLayout
        android:id="@+id/ll_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_serach_history"
                android:layout_centerVertical="true"
                style="@style/text_gray_14"/>
            <ImageView
                android:id="@+id/iv_clean_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_delete"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <com.zhejiang.haoxiadan.ui.view.MyFlowLayout
            android:id="@+id/flowlayout_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
