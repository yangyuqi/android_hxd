<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:orientation="vertical"
            android:background="@drawable/confrim_dialog_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:id="@+id/commond_iv"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/commond_tv_price"
                android:textColor="@color/main_red"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_commond_tv_name"
                android:paddingLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_go"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/white"
                android:background="@drawable/scale_goods_bg"
                android:gravity="center"
                android:text="查看详情"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <ImageView
            android:src="@mipmap/btn_close_hl"
            android:id="@+id/iv_close"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            />

    </RelativeLayout>


</RelativeLayout>